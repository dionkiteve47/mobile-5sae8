<?xml version="1.0" encoding="utf-8"?>
<state-list-animator xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Scale up when the button is pressed -->
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="100"
            android:valueFrom="1.0"
            android:valueTo="1.05"
            android:valueType="floatType"/>

        <objectAnimator
            android:propertyName="scaleY"
            android:duration="100"
            android:valueFrom="1.0"
            android:valueTo="1.05"
            android:valueType="floatType"/>
    </item>

    <!-- Default state, no scaling -->
    <item>
        <objectAnimator
            android:propertyName="scaleX"
            android:duration="100"
            android:valueFrom="1.0"
            android:valueTo="1.0"
            android:valueType="floatType"/>

        <objectAnimator
            android:propertyName="scaleY"
            android:duration="100"
            android:valueFrom="1.0"
            android:valueTo="1.0"
            android:valueType="floatType"/>
    </item>

</state-list-animator>