<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="8dp"
    android:elevation="4dp">

    <!-- Container for reservation info with rounded corners -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false">

        <!-- Reservation Date -->
        <TextView
            android:id="@+id/text_reservation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 12/12/2024"
            android:textSize="18sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:typeface="serif" />

        <!-- Reservation Time -->
        <TextView
            android:id="@+id/text_reservation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 10:00 AM"
            android:textSize="16sp"
            android:textColor="#34495E"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:typeface="serif" />

        <!-- Participants Info -->
        <TextView
            android:id="@+id/text_reservation_participants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participants: 4"
            android:textSize="16sp"
            android:textColor="#34495E"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:typeface="serif" />

        <!-- Reservation Notes -->
        <TextView
            android:id="@+id/text_reservation_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes: Special request for vegetarian meals"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:typeface="serif" />

    </LinearLayout>

    <!-- Delete Button -->
    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#E74C3C"
        android:layout_centerVertical="true"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="16dp"
    android:elevation="2dp"
    android:stateListAnimator="@animator/button_hover_animation" />

</RelativeLayout>
