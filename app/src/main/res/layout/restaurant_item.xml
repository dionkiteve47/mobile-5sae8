<!-- res/layout/restaurant_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Restaurant details (Name, Location, etc.) -->
    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Restaurant Name"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_view_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Location"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_view_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Type"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_view_capacite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Capacity"
        android:textSize="14sp"/>

    <!-- Options menu button -->
    <ImageView
        android:id="@+id/image_view_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert" /> <!-- Ensure you have this drawable for a 3-dot icon -->
</LinearLayout>
