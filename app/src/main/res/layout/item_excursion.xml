<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_excursion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excursion Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/text_view_excursion_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excursion Region"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_view_excursion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excursion Description"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp" />

        <ImageView
            android:id="@+id/image_view_excursion_placeholder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
